<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RegisterActivity">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:padding="25dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.4"
            android:gravity="center"
            android:orientation="vertical"
            android:paddingLeft="20dp"
            android:paddingRight="20dp">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:src="@drawable/ic_studio1hub_logo" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/raleway"
                android:gravity="center"
                android:text="WE PONDER • WE INNOVATE • WE DESIGN • WE AMAZE"
                android:textColor="@color/black"
                android:textSize="10sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.6"
            android:gravity="center"
            android:orientation="vertical">

            <EditText
                android:imeOptions="actionNext"
                android:maxLength="25"
                android:singleLine="true"
                android:id="@+id/etemail"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginTop="15dp"
                android:background="@drawable/login_edittext"
                android:fontFamily="@font/raleway"
                android:hint="Email Id"
                android:paddingLeft="30dp"
                android:textColor="@color/grey"
                android:textColorHint="@color/lightgrey" />

            <android.support.design.widget.TextInputLayout
                android:id="@+id/username_text_input_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                app:passwordToggleTint="@color/lightgrey"
                app:hintEnabled="false"
                app:passwordToggleEnabled="true">

                <EditText
                    android:paddingRight="30dp"
                    android:id="@+id/etpassword"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:background="@drawable/login_edittext"
                    android:fontFamily="@font/raleway"
                    android:hint="Password"
                    android:imeOptions="actionNext"
                    android:inputType="textPassword"
                    android:maxLength="25"
                    android:paddingLeft="30dp"
                    android:singleLine="true"
                    android:textColor="@color/grey"
                    android:textColorHint="@color/lightgrey" />
            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:id="@+id/username_text_input_layout2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                app:passwordToggleTint="@color/lightgrey"
                app:hintEnabled="false"
                app:passwordToggleEnabled="true">

                <EditText
                    android:paddingRight="30dp"
                    android:id="@+id/etpassword2"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:background="@drawable/login_edittext"
                    android:fontFamily="@font/raleway"
                    android:hint="Re-Enter Password"
                    android:imeOptions="actionDone"
                    android:inputType="textPassword"
                    android:maxLength="25"
                    android:paddingLeft="30dp"
                    android:singleLine="true"
                    android:textColor="@color/grey"
                    android:textColorHint="@color/lightgrey" />
            </android.support.design.widget.TextInputLayout>

            <Button
                android:id="@+id/btnregister"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginTop="25dp"
                android:background="@color/orange"
                android:fontFamily="@font/raleway"
                android:lineSpacingExtra="8sp"
                android:text="Register"
                android:textAllCaps="true"
                android:textColor="@color/white"
                android:textSize="15sp"
                android:textStyle="bold"
                android:typeface="serif" />

            <TextView
                android:id="@+id/tvlinktologin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:padding="10dp"
                android:text="Already registred! Login Me."
                android:textColor="@color/grey"
                android:textSize="15sp"
                app:fontFamily="@font/raleway" />

        </LinearLayout>
    </LinearLayout>

</RelativeLayout>