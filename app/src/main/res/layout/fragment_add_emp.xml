<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingBottom="20dp"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:paddingTop="10dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/tvdetail"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:fontFamily="@font/raleway"
                    android:text="Fill Details"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tvid"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:visibility="invisible" />
            </LinearLayout>

            <EditText
                android:id="@+id/etfname"
                style="@style/edittext"
                android:hint="First Name" />

            <EditText
                android:id="@+id/etmname"
                style="@style/edittext"
                android:hint="Middle Name" />

            <EditText
                android:id="@+id/etlname"
                style="@style/edittext"
                android:hint="Last Name" />

            <EditText
                android:id="@+id/etemail"
                style="@style/edittext"
                android:hint="Email Id" />

            <EditText
                android:id="@+id/etphone"
                style="@style/edittext"
                android:hint="Phone"
                android:inputType="phone" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <EditText
                    android:imeOptions="actionDone"
                    android:inputType="date"
                    android:id="@+id/etdob"
                    android:layout_weight="0.7"
                    android:layout_width="0dp"
                    style="@style/edittext"
                    android:hint="Date Of Birth" />
                <Button
                    android:id="@+id/btnsetdate"
                    android:paddingLeft="0dp"
                    android:gravity="center"
                    android:layout_height="35dp"
                    android:layout_marginLeft="20dp"
                    style="@style/edittext"
                    android:background="@color/lightgrey"
                    android:text="pick"
                    android:layout_weight="0.2"
                    android:layout_width="0dp" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <EditText
                    android:imeOptions="actionDone"
                    android:inputType="text"
                    android:id="@+id/etcountry"
                    android:layout_weight="0.7"
                    android:layout_width="0dp"
                    style="@style/edittext"
                    android:hint="Country" />
                <Button
                    android:id="@+id/btncountry"
                    android:paddingLeft="0dp"
                    android:gravity="center"
                    android:layout_height="35dp"
                    android:layout_marginLeft="20dp"
                    style="@style/edittext"
                    android:background="@color/lightgrey"
                    android:text="pick"
                    android:layout_weight="0.2"
                    android:layout_width="0dp" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <EditText
                    android:imeOptions="actionDone"
                    android:inputType="text"
                    android:id="@+id/etstate"
                    android:layout_weight="0.7"
                    android:layout_width="0dp"
                    style="@style/edittext"
                    android:hint="State" />
                <Button
                    android:id="@+id/btnstate"
                    android:paddingLeft="0dp"
                    android:gravity="center"
                    android:layout_height="35dp"
                    android:layout_marginLeft="20dp"
                    style="@style/edittext"
                    android:background="@color/lightgrey"
                    android:text="pick"
                    android:layout_weight="0.2"
                    android:layout_width="0dp" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <EditText
                    android:imeOptions="actionDone"
                    android:inputType="text"
                    android:id="@+id/etcity"
                    android:layout_weight="0.7"
                    android:layout_width="0dp"
                    style="@style/edittext"
                    android:hint="City" />
                <Button
                    android:id="@+id/btncity"
                    android:paddingLeft="0dp"
                    android:gravity="center"
                    android:layout_height="35dp"
                    android:layout_marginLeft="20dp"
                    style="@style/edittext"
                    android:background="@color/lightgrey"
                    android:text="pick"
                    android:layout_weight="0.2"
                    android:layout_width="0dp" />
            </LinearLayout>
            <EditText
                android:id="@+id/etpincode"
                style="@style/edittext"
                android:hint="pincode"
                android:inputType="number" />
            <EditText
                android:imeOptions="actionDone"
                android:id="@+id/etaddress"
                style="@style/edittext"
                android:hint="Local Address" />
            <Button
                android:id="@+id/btnsubmit"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginTop="20dp"
                android:background="@color/orange"
                android:elevation="3dp"
                android:fontFamily="@font/raleway"
                android:lineSpacingExtra="8sp"
                android:text="submit"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textSize="15sp"
                android:textStyle="bold"
                android:typeface="serif" />

            <LinearLayout
                android:id="@+id/llhide"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginTop="20dp"
                android:orientation="horizontal"
                android:visibility="invisible">

                <Button
                    android:id="@+id/btnempproject"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="10dp"
                    android:layout_weight="0.5"
                    android:background="@drawable/login_edittext"
                    android:elevation="3dp"
                    android:fontFamily="@font/raleway"
                    android:text="Projects"
                    android:textAllCaps="false"
                    android:textColor="@color/grey"
                    android:textSize="15sp"
                    android:textStyle="bold" />

                <Button
                    android:id="@+id/btntrack"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_weight="0.5"
                    android:background="@drawable/login_edittext"
                    android:elevation="3dp"
                    android:fontFamily="@font/raleway"
                    android:text="Track"
                    android:textAllCaps="false"
                    android:textColor="@color/grey"
                    android:textSize="15sp"
                    android:textStyle="bold" />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/llhide2"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginTop="20dp"
                android:orientation="horizontal"
                android:visibility="visible">

                <Button
                    android:id="@+id/btnreject"
                    android:layout_marginRight="10dp"
                    android:layout_width="0dp"
                    android:layout_weight="0.5"
                    android:layout_height="45dp"
                    android:background="@color/orange"
                    android:elevation="3dp"
                    android:fontFamily="@font/raleway"
                    android:lineSpacingExtra="8sp"
                    android:text="Reject"
                    android:textAllCaps="false"
                    android:textColor="@color/white"
                    android:textSize="15sp"
                    android:textStyle="bold"
                    android:typeface="serif" />

                <Button
                    android:id="@+id/btnverified"
                    android:layout_marginLeft="10dp"
                    android:layout_width="0dp"
                    android:layout_weight="0.5"
                    android:layout_height="45dp"
                    android:background="@color/orange"
                    android:elevation="3dp"
                    android:fontFamily="@font/raleway"
                    android:lineSpacingExtra="8sp"
                    android:text="Verified"
                    android:textAllCaps="false"
                    android:textColor="@color/white"
                    android:textSize="15sp"
                    android:textStyle="bold"
                    android:typeface="serif" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
    <ProgressBar
        android:id="@+id/pbar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:visibility="visible" />
</RelativeLayout>
