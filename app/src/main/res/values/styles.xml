<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="empTitle">
        <item name="android:fontFamily">@font/raleway</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="empItem">
        <item name="android:imeOptions">actionNext</item>
        <item name="android:fontFamily">@font/raleway</item>
        <item name="android:textSize">13sp</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="view_profile">
        <item name="android:layout_marginBottom">5dp</item>
        <item name="android:layout_marginTop">20dp</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/lightgrey2</item>
        <item name="android:fontFamily">@font/raleway</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
    </style>

    <style name="view_profile_text">
        <item name="android:layout_marginLeft">50dp</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">16sp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:textColor">@color/grey</item>
    </style>

    <style name="edittext">
        <item name="android:textSize">13sp</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:fontFamily">@font/raleway</item>
        <item name="android:textColor">@color/grey</item>
        <item name="android:textColorHint">@color/lightgrey</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:background">@drawable/login_edittext</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">45dp</item>
    </style>

</resources>
